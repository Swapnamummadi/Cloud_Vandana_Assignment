package com.arraysuffle;


public class ArraySuffle {

	void suffleArray(int[] array){
		
		int n = array.length;
		Random r = new Random();
		for(int i = n-1; i > 0; i--) {
			int j = random.nextInt(i+1);
			int temp = arr[i];
			arr[i] = arr[j];
			arr[j] = temp;
		}
	}
	public static void main(String[] args) {
		
		int[] arr = {1,2,3,4,5,6,7};
		suffleArray(arr);
		
		
	}
}
